@using CSS_Server.Models.Authentication
@using CSS_Server.ViewModels
@using CSS_Server.Models
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery AntiForgery

@{
    Layout = "_Layout";
}

@model List<User>

<main class="main_dashboard">
    <button class="addButton" title="Register a new user">+</button>
    <h1>Users</h1>
    <div id="AntiForgeryToken">@AntiForgery.GetAndStoreTokens(Context).RequestToken</div>
    <table>
        <thead>
            <tr>
                <td>ID</td><td>UserName</td><td>Actions</td>
            </tr>
        </thead>
        <tbody>
        @foreach (User user in Model)
        {
            <tr><td>@user.Id</td><td>@user.UserName</td><td><span class="trashbin"></span><span class="pencil"></span></td></tr>
        }
    </tbody>
    </table>
</main>

<script src="~/js/AccountIndex.js"></script>
